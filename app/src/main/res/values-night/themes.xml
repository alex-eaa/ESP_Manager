<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ESPManager" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="pirStyle">@style/MyPirStyle</item>
    </style>

    <style name="MyPirStyle">
        <item name="pirDisableColor">@color/pirDisable</item>
        <item name="pirMonitoringColor">@color/pirOff</item>
        <item name="pirAlarmColor">@color/pirOn</item>
        <item name="scaleMinDisableState">0.5</item>
        <item name="scaleMaxDisableState">0.5</item>
        <item name="scaleMinMonitoringState">0.7</item>
        <item name="scaleMaxMonitoringState">0.9</item>
        <item name="scaleMinAlarmState">0.7</item>
        <item name="scaleMaxAlarmState">1.0</item>
        <item name="durationPulseDisableState">400</item>
        <item name="durationPulseMonitoringState">1500</item>
        <item name="durationPulseAlarmState">150</item>
    </style>
</resources>